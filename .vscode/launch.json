    "version": "0.2.0",
    "trace":true,
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to debugger",       // Name, der im VSCode Auswahlmenü neben dem grünen Play angezeigt wird
            "address": "127.0.0.1",                 // Adresse, an dem der node.js Prozess läuft (bei Remote Debug, der Remote-Rechner)
            "port": 9229,                            // Port, auf dem der node.js Debugger lauscht, der mit node --debug-brk ... gestartet wird
            "trace":true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/opt/iobroker/node_modules/iobroker.auto_strom"
        }
    ]
}